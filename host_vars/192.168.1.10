---
branch: master

ansible_cron_minute: "40"
ssh_port: 22
ssh_users: "user1 user2"

# platform-specific
linode_instance: true
microcode_amd_install: false
microcode_intel_install: false
proxmox_instance: true
raspberry_pi: false

# server
unattended_upgrades: true
web_server: true

# above vars are not in use yet

# set the IOMMU modules for proxmox server
kernel_modules:
 # - vfio
 # - vfio_iommu_type1
 # - vfio_pci
 # - vfio_virqfd
  - name: dummy
    unload: yes
    blacklist: yes
  - name: test
    unload: yes
    blacklist: yes

kernel_use_systemd_modules_load: true

kernel_modules_conf_dir: "/etc/modules-load.d"

kernel_load_file: "load-ansible.conf"
kernel_blacklist_file: "blacklist-ansible.conf"
