---
branch: master

ansible_cron_minute: "40"
ssh_port: 22
ssh_users: "erwin s1m0ne"

# platform-specific
linode_instance: false
microcode_amd_install: false
microcode_intel_install: false
proxmox_instance: true
raspberry_pi: false

# server
unattended_upgrades: true
web_server: false
proxmox_server: false

# Samba configuration of this fileserver
samba_shares:
  - name: media
    comment: 'Media Tank'
    group: users
    write_list: +users
    include_file: media-include.conf

  - name: fotos
    comment: 'Fotos'
    group: users
    write_list: +users
    include_file: media-include.conf

  - name: import_fotos
    comment: 'Drop hier je fotos'
    group: users
    write_list: +users
 
samba_users:
  - name: erwin
    password: "{{ erwin_password }}"

