---
branch: master

ansible_cron_minute: "40"
ssh_port: 22
ssh_users: "erwin s1m0ne"

# platform-specific
linode_instance: false
microcode_amd_install: false
microcode_intel_install: false
proxmox_instance: true
raspberry_pi: false

# server
unattended_upgrades: true
web_server: false
proxmox_server: false

# samba configuration of fileserver Samba

samba_shares:
  - name: TimeMachine
    comment: 'Share useable as a TimeMachine backup target on MacOS'
    vfs_objects:
      - name: fruit
        options:
           - name: time machine
             value: 'yes'
      - name: streams_xattr
    path: /data/timemachine
    write_list: timemachine
    owner: timemachine
    group: timemachine
    public: 'no'
    guest_ok: 'no'
    browseable: 'no'
          
samba_users:
  - name: erwin
    password: "{{ erwin_password }}"
  - name: timemachine
    password: "{{ timemachine_password }}"

