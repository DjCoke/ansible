# {{ansible_managed}}

# Primary Pi-hole host (in IP or DNS name)
REMOTE_HOST='{{pihole_gravity_sync_remote_host}}'

# User account on primary with SUDO rights
REMOTE_USER='{{pihole_gravity_sync_remote_user}}'

### SSH Customization
GS_ETC_PATH='/etc/gravity-sync'
GS_SSH_PKIF='/opt/gravity-sync/.ssh/id_rsa'
GS_LOCAL_REPO='/opt/gravity-sync/.gs'

# Pi-hole Folder/File Customization - Only need to be customized when using containers
LOCAL_PIHOLE_DIRECTORY='/home/erwin/docker-compose/pihole/etc-pihole'
REMOTE_PIHOLE_DIRECTORY='/home/erwin/docker-compose/pihole/etc-pihole'       # Remote Pi-hole data directory
LOCAL_DNSMASQ_DIRECTORY='/home/erwin/docker-compose/pihole/etc-dnsmasq.d'
REMOTE_DNSMASQ_DIRECTORY='/home/erwin/docker-compose/pihole/etc-dnsmasq.d'   # Remote DNSMASQ/FTL data directory
LOCAL_FILE_OWNER='999:999'
REMOTE_FILE_OWNER='999:999'                      # Remote file owner for Pi-hole

# Pi-hole Docker/Podman container name - Docker will pattern match anything set below
LOCAL_DOCKER_CONTAINER='pihole'
REMOTE_DOCKER_CONTAINER='pihole'                   # Remote Pi-hole container name

